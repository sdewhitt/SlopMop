function renderDebugBadge() {
  const div = document.createElement("div");
  // div is generic block container, no semantic meaning
  // only exists in memory, not rendered yet
  // also: <a> is link or anchor element, uses href="url" to navigate to URLs
  div.id = "__root";
  document.body.appendChild(div); // insert div into live page

  // find root that we just appended
  const rootContainer = document.querySelector("#__root");
  if (!rootContainer) throw new Error("Can't find Content root element");
  const root = createRoot(rootContainer); // returns root object
  root.render(
    <div className="absolute bottom-0 left-0 text-lg text-black bg-amber-400 z-50">
      content script <span className="your-class">loaded</span>
    </div>
  );
}